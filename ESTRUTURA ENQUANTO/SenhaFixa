class SenhaFixa {


 static void Main(string[] args){

 int senha = 0;

  Console.WriteLine("Digite a senha : ");
  senha = int.Parse(Console.ReadLine());

  while(senha != 2002){

    Console.WriteLine("Senha Invalida! Tente novamente : ");
    senha = int.Parse(Console.ReadLine());


  }

  if(senha == 2002){
    Console.WriteLine("ACESSO PERMITIDO ! ");
  }


    
    }




    }
